<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/hometask4?createDatabaseIfNotExist=true&amp;serverTimezone=UTC
        </property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <mapping class="persistance.person.Person"/>
        <mapping class="persistance.person.Employee"/>
        <mapping class="persistance.person.Student"/>
        <mapping class="persistance.drinks.Juice"/>
        <mapping class="persistance.drinks.Soda"/>
        <mapping class="persistance.drinks.Water"/>
        <mapping class="persistance.animal.Animal"/>
        <mapping class="persistance.animal.Cat"/>
        <mapping class="persistance.animal.Dog"/>

    </session-factory>
</hibernate-configuration>